
<%= form_tag(process_user_data_path) do %>



<label for="name">Your name</label> 
<input type="text" name="name">

<label for="phone_number">Phone</label> 
<input type="text" name="phone_number">

<label for="address">Address</label> 
<input type="text" name="address">

<label for="birthday">Birthday</label> 
<input type="text" name="birthday">
<div> <%= submit_tag 'Update' %> </div>
<% end %>



<%= link_to("Request a concert", request_form_path) %>

    
<%   current_user.requests.replied.each do |request| %>
<%=  request.artist %>
<%=  request.city  %>
<%=	 request.venue.name %>
<%=  request.date %>
<%=  request.ticket_price %>
<%=  request.tickets_required  %>
<%=  request.date_campaign_ends %>
<%=  request.description %>
  
<%= link_to("Accept", accept_path(request.id), method: :post  ) %>
<%= link_to('Cancel', decline_path(request.id), method: :post) %>
<% end %>
