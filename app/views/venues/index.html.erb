<p id="notice"><%= notice %></p>

<h1>Listing Venues</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Manager name</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>Email</th>
      <th>Capacity</th>
      <th>Adult</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.manager_name %></td>
        <td><%= venue.phone_number %></td>
        <td><%= venue.address %></td>
        <td><%= venue.email %></td>
        <td><%= venue.capacity %></td>
        <td><%= venue.adult %></td>
        <td><%= venue.user_id %></td>
        <td><%= link_to 'Show', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

